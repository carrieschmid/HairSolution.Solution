@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylists>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

@foreach (Stylists stylist in Model)
{
    <li>@Html.ActionLink(
    $"{stylist.FirstName} {stylist.LastName}", "Details", new { id = stylist.StylistsId })
    <p> stylist.Specialty </p> 
    </li>
}

<p>@Html.ActionLink("Add new stylists", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>