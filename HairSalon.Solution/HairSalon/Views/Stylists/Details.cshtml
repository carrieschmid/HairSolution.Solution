@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylists;

<h2>Stylist Details</h2>
<hr />
<p>First Name: 
@Html.DisplayFor(model => model.FirstName)</p>
<p>Last Name: 
@Html.DisplayFor(model => model.LastName)</p>
<p>@Html.DisplayNameFor(model => model.Specialty): 
@Html.DisplayFor(model => model.Specialty)</p>

<ul>
@if (@Model.Clients.Count == 0)
{
  <p>No clients found.</p>
}

@foreach (Clients client in @Model.Clients)
{
  <li>Name: @client.FirstName, @client.LastName
      </li>
}
</ul>

<p>@Html.ActionLink("Back to stylists", "Index")</p>
<p>@Html.ActionLink("Edit Stylists", "Edit", new { id = Model.StylistsId })</p>
<p>@Html.ActionLink("Delete Stylists", "Delete", new { id = Model.StylistsId })</p>